set nocompatible
set hidden

set tabstop=4 shiftwidth=4 softtabstop=0
set expandtab

set backspace=indent,eol,start

set number
set ruler

syntax on
source ~/.vim/vimrc/.vimrc_show_zenkaku
colorscheme default

set history=1024
set hlsearch
set incsearch
set autoindent
set smartindent
"set iminsert=0
"set imsearch=-1

"set encoding=japan
"set fileencodings=sjis
set enc=utf-8
set fenc=utf-8

"set foldmethod=syntax
set foldlevel=128

set statusline=%<%f\ %n\ %m%r%h%w%{'['.(&fenc!=''?&fenc:&enc).']['.&ff.']'}%{fugitive#statusline()}%=%l,%c%V%8P%y
set laststatus=2

set wildmode=list:longest

set ambiwidth=double
set nrformats=hex

if has("vms")
  set nobackup      " do not keep a backup file, use versions instead
  set nowritebackup " do not work on VMS
else
  set backup        " save a backup file
  set backupdir=$HOME/.vim/backup
endif

if has('mouse')
  set mouse=a
endif

" save and jump to the last known cusor position
" Only do this part when compiled with support for autocommands.
if has("autocmd")
  " Put these in an autocmd group, so that we can delete them easily.
  augroup vimrcEx
  au!

  " For all text files set 'textwidth' to 78 characters.
  autocmd FileType text setlocal textwidth=78

  " When editing a file, always jump to the last known cursor position.
  " Don't do it when the position is invalid or when inside an event handler
  " (happens when dropping a file on gvim).
  " Also don't do it when the mark is in the first line, that is the default
  " position when opening a file.
  autocmd BufReadPost *
    \ if line("'\"") > 1 && line("'\"") <= line("$") |
    \   exe "normal! g`\"" |
    \ endif
  augroup END
endif " has("autocmd")

" Convenient command to see the difference between the current buffer and the
" file it was loaded from, thus the changes you made.
" Only define it when not defined already.
" type :diffoff when you quit diff mode.
if !exists(":DiffOrig")
  command DiffOrig vert new | set bt=nofile | r # | 0d_ | diffthis | wincmd p | diffthis
endif

